<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
	<TextView
        android:id="@+id/input_item_name_label"
        android:layout_height="fill_parent"
        android:layout_width="wrap_content"
        android:text="项目名称："
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <EditText
        android:id="@+id/input_item_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:scrollHorizontally="true" />
    
    <TextView
        android:id="@+id/input_item_value_label"
        android:layout_height="fill_parent"
        android:layout_width="wrap_content"
        android:text="对应取值："
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <EditText
        android:id="@+id/input_item_value"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:scrollHorizontally="true" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
	        android:id="@+id/input_item_btnCopyValue"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="5"
	        android:text="复制取值" />
        <Button
	        android:id="@+id/input_item_btnPasteValue"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="5"
	        android:text="粘贴取值" />
    </LinearLayout>
    

</LinearLayout>
